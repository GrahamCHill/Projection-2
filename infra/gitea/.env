# PostgreSQL (use your existing db service)
DATABASE_TYPE=postgres
DATABASE_HOST=db:5432
DATABASE_NAME=appdb
DATABASE_USER=postgres
DATABASE_PASS=devpassword
# Web server
GITEA__server__DOMAIN=localhost
GITEA__server__ROOT_URL=http://localhost:3000/
GITEA__server__SSH_PORT=22
GITEA__server__LFS_START_SERVER=true

# Data paths (inside container)
GITEA__server__APP_DATA_PATH=/data

# Storage backend â€” will be set in app.ini / custom conf below
# we'll configure MinIO via app.ini (example below)
GITEA__server__LFS_START_SERVER=true
GITEA__storage.myminio__STORAGE_TYPE=minio
GITEA__storage.myminio__MINIO_ENDPOINT=minio:9000
GITEA__storage.myminio__MINIO_ACCESS_KEY=minioadmin
GITEA__storage.myminio__MINIO_SECRET_KEY=minioadmin
GITEA__storage.myminio__MINIO_BUCKET=gitea-lfs